---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import {
  generateBreadcrumbSchema,
  generateWebPageSchema,
} from '../seo/schemas';

const siteUrl = 'https://smile-concierge-cancun.vercel.app';
const breadcrumbs = [
  { name: 'Home', url: siteUrl },
  { name: 'About Us', url: `${siteUrl}/about` },
];
---

<Layout
  title="About Smile Concierge Cancun | Luxury Dental Experience in Mexico"
  description="Discover Smile Concierge Cancun - your trusted partner for premium dental tourism. 10+ years experience connecting patients with Cancun's top dental specialists."
  keywords="about smile concierge, dental clinic cancun, dental tourism company, luxury dental experience, cancun dentistry"
>
  <!-- Structured Data -->
  <script
    type="application/ld+json"
    set:html={generateBreadcrumbSchema(breadcrumbs)}
  />
  <script
    type="application/ld+json"
    set:html={generateWebPageSchema(
      'About Smile Concierge Cancun',
      'Learn about our mission to provide exceptional dental care experiences in Cancun',
      `${siteUrl}/about`
    )}
  />
  <Header client:load />
  <main>
    <!-- Hero Section - Compact -->
    <section
      class="from-cream to-sand relative overflow-hidden bg-gradient-to-br via-white py-10 md:py-24"
    >
      <div class="absolute inset-0 opacity-5">
        <div
          class="bg-forest absolute top-10 left-4 h-20 w-20 rounded-full blur-xl"
        >
        </div>
        <div
          class="bg-sage absolute right-8 bottom-20 h-24 w-24 rounded-full blur-xl"
        >
        </div>
      </div>

      <div class="relative mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
        <h1
          class="mb-4 text-3xl font-bold text-slate-800 md:mb-6 md:text-5xl lg:text-6xl"
        >
          About Us
        </h1>
        <p
          class="mx-auto max-w-3xl text-lg font-light text-slate-600 md:text-2xl"
        >
          A luxury dental experience, guided by experts.
        </p>

        <!-- Experience Badge - Compact -->
        <div class="mt-6 flex justify-center md:mt-8">
          <div
            class="inline-flex items-center gap-3 rounded-xl border border-slate-200 bg-white/80 px-5 py-3 shadow-lg backdrop-blur-xl md:gap-4 md:rounded-2xl md:px-8 md:py-4"
          >
            <div
              class="from-forest to-sage flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br text-lg font-bold text-white shadow-lg md:h-16 md:w-16 md:rounded-2xl md:text-2xl"
            >
              10+
            </div>
            <div class="text-left">
              <p class="text-xs font-medium text-slate-600 md:text-sm">
                Years of
              </p>
              <p class="text-sm font-bold text-slate-800 md:text-lg">
                Excellence
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Story - Consolidated (Story + CEO) -->
    <section class="bg-white py-10 md:py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <!-- Header -->
          <div class="mb-6 text-center md:mb-12">
            <h2 class="text-2xl font-bold text-slate-800 md:text-4xl">
              Our Story
            </h2>
            <div
              class="from-forest to-sage mx-auto mt-3 h-1 w-16 rounded-full bg-gradient-to-r md:mt-4 md:w-20"
            >
            </div>
          </div>

          <!-- Main Quote -->
          <div
            class="from-sand/30 to-cream border-forest mb-6 rounded-xl border-l-4 bg-gradient-to-r p-4 md:mb-8 md:rounded-2xl md:p-8"
          >
            <p class="text-base font-medium text-slate-800 italic md:text-xl">
              "How can I create an alliance with the top doctors in Cancun that
              allows me to guide patients to the care they truly need?"
            </p>
            <p
              class="text-forest mt-3 text-sm font-semibold md:mt-4 md:text-base"
            >
              — Gretter Garriga, Founder & CEO
            </p>
          </div>

          <!-- Story Content - Compact on mobile -->
          <div
            class="space-y-4 text-sm leading-relaxed text-slate-700 md:space-y-6 md:text-lg"
          >
            <p>
              This question led to the creation of <strong class="text-forest"
                >Smile Concierge Cancun</strong
              > — a network that unites top specialists as a family, allowing us
              to personally understand your needs and match you with the perfect
              dentist.
            </p>

            <p class="hidden md:block">
              After years of training as a dental clinic manager, I specialized
              in patient care with one goal: to make every dental visit a
              positive experience through honest, human, and empathetic
              treatment.
            </p>

            <!-- Key Message -->
            <div
              class="md:border-forest rounded-xl border border-slate-100 bg-white p-4 shadow-lg md:rounded-2xl md:border-l-4 md:p-6"
            >
              <p class="text-sm font-semibold text-slate-800 md:text-lg">
                It's more than referrals — it's a personalized, trusted pathway
                to exceptional dental care.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Principles - 2x2 Grid Mobile -->
    <section
      class="from-sand via-cream bg-gradient-to-br to-white py-10 md:py-20"
    >
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-6 text-center md:mb-12">
          <h2 class="text-xl font-bold text-slate-800 md:text-4xl">
            Our Core Principles
          </h2>
        </div>

        <!-- 2x2 Mobile | 3 cols Desktop -->
        <div
          class="mx-auto grid max-w-6xl grid-cols-2 gap-3 md:grid-cols-3 md:gap-8"
        >
          <!-- Principle 1 -->
          <div
            class="group to-forest/5 rounded-xl border border-slate-100 bg-gradient-to-br from-white p-4 text-center shadow-lg md:rounded-2xl md:p-8 md:text-left md:shadow-xl"
          >
            <div
              class="from-forest to-forest-dark mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br shadow-md md:mx-0 md:mb-6 md:h-16 md:w-16 md:rounded-2xl"
            >
              <svg
                class="h-6 w-6 text-white md:h-8 md:w-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-sm font-bold text-slate-800 md:mb-3 md:text-xl">
              Best Specialists
            </h3>
            <p class="hidden leading-relaxed text-slate-600 md:block">
              We work with the best specialists in every field, ensuring
              expertise and quality results.
            </p>
          </div>

          <!-- Principle 2 -->
          <div
            class="group to-sage/5 rounded-xl border border-slate-100 bg-gradient-to-br from-white p-4 text-center shadow-lg md:rounded-2xl md:p-8 md:text-left md:shadow-xl"
          >
            <div
              class="from-sage to-sage-dark mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br shadow-md md:mx-0 md:mb-6 md:h-16 md:w-16 md:rounded-2xl"
            >
              <svg
                class="h-6 w-6 text-white md:h-8 md:w-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-sm font-bold text-slate-800 md:mb-3 md:text-xl">
              Premium Materials
            </h3>
            <p class="hidden leading-relaxed text-slate-600 md:block">
              We only use top-tier materials and laboratories, because our
              patients deserve nothing less.
            </p>
          </div>

          <!-- Principle 3 -->
          <div
            class="group to-forest-light/5 col-span-2 rounded-xl border border-slate-100 bg-gradient-to-br from-white p-4 text-center shadow-lg md:col-span-1 md:rounded-2xl md:p-8 md:text-left md:shadow-xl"
          >
            <div
              class="from-forest-light to-sage mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br shadow-md md:mx-0 md:mb-6 md:h-16 md:w-16 md:rounded-2xl"
            >
              <svg
                class="h-6 w-6 text-white md:h-8 md:w-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-sm font-bold text-slate-800 md:mb-3 md:text-xl">
              Human Attention
            </h3>
            <p class="hidden leading-relaxed text-slate-600 md:block">
              We offer personalized, human attention, guided by professionals
              who will accompany you through every step.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why We're Different - Compact -->
    <section class="bg-white py-10 md:py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-5xl">
          <!-- Title -->
          <div class="mb-6 text-center md:mb-10">
            <h2 class="text-xl font-bold text-slate-800 md:text-4xl">
              Not an Express Service
            </h2>
            <p class="mt-2 text-sm text-slate-600 md:mt-4 md:text-lg">
              We believe your smile deserves more than quick-fix solutions.
            </p>
          </div>

          <!-- Stats Grid - Horizontal on mobile -->
          <div class="grid grid-cols-3 gap-2 md:gap-6">
            <div
              class="rounded-xl border border-slate-100 bg-white p-3 text-center shadow-lg md:rounded-2xl md:p-6"
            >
              <div
                class="bg-forest/10 mx-auto mb-2 flex h-10 w-10 items-center justify-center rounded-lg md:mb-4 md:h-12 md:w-12 md:rounded-xl"
              >
                <svg
                  class="text-forest h-5 w-5 md:h-6 md:w-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                  ></path>
                </svg>
              </div>
              <p class="text-xs font-bold text-slate-800 md:text-base">
                Pre-Planning
              </p>
              <p class="mt-1 hidden text-sm text-slate-600 md:block">
                We assess your case before arrival
              </p>
            </div>

            <div
              class="rounded-xl border border-slate-100 bg-white p-3 text-center shadow-lg md:rounded-2xl md:p-6"
            >
              <div
                class="bg-sage/10 mx-auto mb-2 flex h-10 w-10 items-center justify-center rounded-lg md:mb-4 md:h-12 md:w-12 md:rounded-xl"
              >
                <svg
                  class="text-sage h-5 w-5 md:h-6 md:w-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <p class="text-xs font-bold text-slate-800 md:text-base">
                Efficient Timeline
              </p>
              <p class="mt-1 hidden text-sm text-slate-600 md:block">
                Planned procedures, no rushing
              </p>
            </div>

            <div
              class="rounded-xl border border-slate-100 bg-white p-3 text-center shadow-lg md:rounded-2xl md:p-6"
            >
              <div
                class="bg-forest-light/10 mx-auto mb-2 flex h-10 w-10 items-center justify-center rounded-lg md:mb-4 md:h-12 md:w-12 md:rounded-xl"
              >
                <svg
                  class="text-forest-light h-5 w-5 md:h-6 md:w-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                  ></path>
                </svg>
              </div>
              <p class="text-xs font-bold text-slate-800 md:text-base">
                Natural Results
              </p>
              <p class="mt-1 hidden text-sm text-slate-600 md:block">
                Long-lasting, premium quality
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Closing CTA - Compact -->
    <section class="from-forest to-sage bg-gradient-to-r py-10 md:py-20">
      <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
        <div
          class="rounded-2xl border border-white/20 bg-white/10 p-6 backdrop-blur-sm md:rounded-3xl md:p-12"
        >
          <h2 class="mb-4 text-2xl font-bold text-white md:mb-6 md:text-4xl">
            More Than a Dental Company
          </h2>
          <p
            class="mb-6 text-sm leading-relaxed text-white/95 md:mb-8 md:text-xl"
          >
            We're a family of professionals dedicated to caring for your smile.
            We can't wait to help you achieve your dream of a healthy, natural,
            and beautiful smile.
          </p>
          <a
            href="https://wa.me/529983889184?text=Hello!%20I'm%20interested%20in%20receiving%20a%20free%20dental%20assessment.%20I%20would%20like%20to%20learn%20more%20about%20your%20services%20and%20how%20you%20can%20help%20me%20achieve%20my%20perfect%20smile.%20Thank%20you!"
            target="_blank"
            rel="noopener noreferrer"
            class="text-forest hover:bg-sand inline-block transform rounded-xl bg-white px-6 py-3 text-base font-bold shadow-xl transition-all duration-300 hover:scale-105 md:rounded-2xl md:px-10 md:py-5 md:text-xl"
          >
            Start Your Journey Today
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
