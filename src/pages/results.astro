---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import ResultsGallery from '../components/ResultsGallery.tsx';
import { galleryImages } from '../data/galleryImages';
import {
  generateBreadcrumbSchema,
  generateWebPageSchema,
} from '../seo/schemas';

const siteUrl = 'https://smile-concierge-cancun.vercel.app';
const breadcrumbs = [
  { name: 'Home', url: siteUrl },
  { name: 'Results', url: `${siteUrl}/results` },
];
---

<Layout
  title="Before & After Results | Real Smile Transformations | Smile Concierge Cancun"
  description="See stunning before & after photos of real patients. 500+ successful smile transformations with veneers, implants, and smile design in Cancun, Mexico."
  keywords="dental before after, smile makeover results, veneer results, dental implant results, smile transformation photos"
>
  <!-- Structured Data -->
  <script
    type="application/ld+json"
    set:html={generateBreadcrumbSchema(breadcrumbs)}
  />
  <script
    type="application/ld+json"
    set:html={generateWebPageSchema(
      'Patient Results Gallery',
      'Real before and after photos of smile transformations',
      `${siteUrl}/results`
    )}
  />
  <Header client:load />
  <main>
    <!-- Hero Section - Glassmorphism -->
    <section
      class="from-cream via-sand/30 relative overflow-hidden bg-gradient-to-br to-white py-12 md:py-20"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-30">
        <div
          class="bg-forest/20 absolute top-10 right-10 h-32 w-32 rounded-full blur-3xl"
        >
        </div>
        <div
          class="bg-sage/20 absolute bottom-10 left-10 h-40 w-40 rounded-full blur-3xl"
        >
        </div>
      </div>

      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-8 text-center md:mb-16">
          <div
            class="mb-6 inline-flex items-center gap-2 rounded-full border border-white/40 bg-white/70 px-4 py-2 shadow-lg backdrop-blur-xl"
          >
            <svg
              class="text-forest h-5 w-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            <span class="text-sm font-semibold text-slate-700"
              >Real Transformations</span
            >
          </div>

          <h1
            class="mb-4 text-3xl leading-tight font-bold text-slate-800 md:mb-6 md:text-4xl lg:text-5xl"
          >
            Natural Results That Wow
          </h1>
          <p
            class="mx-auto mb-6 max-w-2xl text-base leading-relaxed text-slate-600 md:mb-8 md:max-w-3xl md:text-xl"
          >
            See the incredible transformations
            <span class="hidden md:inline">
              our patients have achieved. Every smile tells a story of
              confidence, beauty, and natural perfection</span
            >
          </p>

          <div
            class="inline-flex items-center rounded-full border border-white/40 bg-white/70 px-5 py-3 shadow-lg backdrop-blur-xl transition-all duration-300 hover:scale-105 hover:shadow-xl md:px-6"
          >
            <div
              class="bg-forest/10 mr-3 flex h-8 w-8 items-center justify-center rounded-xl shadow-md"
            >
              <svg
                class="text-forest h-4 w-4"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <p
              class="from-forest to-sage bg-gradient-to-r bg-clip-text text-sm font-bold text-transparent md:text-lg"
            >
              500+ successful transformations
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section
      class="from-sand via-cream bg-gradient-to-br to-white py-12 md:py-20"
    >
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <ResultsGallery images={galleryImages} client:load />
      </div>
    </section>

    <!-- CTA Section - Modern -->
    <section
      class="from-forest via-sage to-forest-light relative overflow-hidden bg-gradient-to-br py-12 md:py-20"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div
          class="absolute top-4 left-4 h-20 w-20 rounded-full bg-white blur-2xl"
        >
        </div>
        <div
          class="absolute top-20 right-8 h-16 w-16 rounded-full bg-white blur-2xl"
        >
        </div>
        <div
          class="absolute bottom-8 left-12 h-24 w-24 rounded-full bg-white blur-2xl"
        >
        </div>
        <div
          class="absolute right-4 bottom-16 h-12 w-12 rounded-full bg-white blur-2xl"
        >
        </div>
      </div>

      <div class="relative mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
        <h2
          class="mb-4 text-2xl leading-tight font-bold text-white md:mb-6 md:text-3xl lg:text-4xl"
        >
          Ready for Your Transformation?
        </h2>
        <p
          class="mb-6 text-base leading-relaxed text-white/90 md:mb-8 md:text-xl"
        >
          Join hundreds of satisfied patients who achieved their perfect smile
          in Cancun.
        </p>
        <div
          class="mx-auto flex max-w-md flex-col justify-center gap-3 sm:max-w-none sm:flex-row sm:gap-4"
        >
          <a
            href="https://wa.me/529983889184?text=Hello!%20I'm%20interested%20in%20receiving%20a%20free%20dental%20assessment.%20I%20would%20like%20to%20learn%20more%20about%20your%20services%20and%20how%20you%20can%20help%20me%20achieve%20my%20perfect%20smile.%20Thank%20you!"
            target="_blank"
            rel="noopener noreferrer"
            class="text-forest hover:bg-sand transform rounded-2xl bg-white px-6 py-3 text-center text-base font-bold shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl md:px-8 md:py-4 md:text-lg"
          >
            Get Your Free Assessment
          </a>
          <a
            href="/specialists"
            class="hover:text-forest transform rounded-2xl border-2 border-white px-6 py-3 text-center text-base font-bold text-white transition-all duration-300 hover:scale-105 hover:bg-white md:px-8 md:py-4 md:text-lg"
          >
            Meet Our Specialists
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
