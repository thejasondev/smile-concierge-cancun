---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';

// Results data
const resultCategories = [
  { id: 'all', name: 'All Cases', active: true },
  { id: 'veneers', name: 'Veneers', active: false },
  { id: 'implants', name: 'Implants', active: false },
  { id: 'crowns', name: 'Crowns', active: false },
  { id: 'full-mouth', name: 'Full Mouth', active: false }
];

const featuredCases = [
  {
    id: 1,
    title: 'Complete Smile Makeover',
    description: '8 porcelain veneers for a natural, Hollywood-worthy smile transformation.',
    treatment: 'Porcelain Veneers',
    doctor: 'Dr. Vázquez',
    duration: '3 days treatment',
    color: 'teal'
  },
  {
    id: 2,
    title: 'Full Mouth Restoration',
    description: 'Complete dental implant solution with natural-looking crowns.',
    treatment: 'Dental Implants',
    doctor: 'Dr. Pavón',
    duration: '5 days treatment',
    color: 'cyan'
  },
  {
    id: 3,
    title: 'Natural Crown Replacement',
    description: 'Seamless crown and bridge work that blends perfectly with natural teeth.',
    treatment: 'Crowns & Bridges',
    doctor: 'Dr. García',
    duration: '4 days treatment',
    color: 'emerald'
  }
];
---

<Layout title="Before & After Results - Smile Concierge Cancun">
  <Header client:load />
  <main>
    <!-- Hero Section - Glassmorphism -->
    <section class="relative bg-gradient-to-br from-teal-50 via-cyan-50 to-slate-50 py-12 md:py-20 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-10 right-10 w-32 h-32 bg-teal-300 rounded-full blur-3xl"></div>
        <div class="absolute bottom-10 left-10 w-40 h-40 bg-cyan-300 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <div class="inline-flex items-center gap-2 bg-white/70 backdrop-blur-xl px-4 py-2 rounded-full border border-white/40 shadow-lg mb-6">
            <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="text-sm font-semibold text-slate-700">Real Transformations</span>
          </div>
          
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-4 md:mb-6 leading-tight">
            Natural Results That Wow
          </h1>
          <p class="text-base md:text-xl text-slate-600 max-w-2xl md:max-w-3xl mx-auto mb-6 md:mb-8 leading-relaxed">
            See the incredible transformations
            <span class="hidden md:inline"> our patients have achieved. Every smile tells a story of confidence, beauty, and natural perfection</span>
          </p>
          
          <div class="inline-flex items-center bg-white/70 backdrop-blur-xl px-5 md:px-6 py-3 rounded-full border border-white/40 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
            <div class="w-8 h-8 bg-gradient-to-br from-teal-100 to-teal-50 rounded-xl flex items-center justify-center mr-3 shadow-md">
              <svg class="w-4 h-4 text-teal-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <p class="text-sm md:text-lg font-bold bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent">
              500+ successful transformations
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Filter Section - Glassmorphism -->
    <section class="py-8 md:py-12 bg-gradient-to-b from-white to-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-2 md:gap-3">
          {resultCategories.map((category) => (
            <button 
              class={`px-4 md:px-6 py-2 md:py-2.5 rounded-full font-semibold text-xs md:text-sm transition-all duration-300 ${
                category.active 
                  ? 'bg-gradient-to-r from-teal-600 to-cyan-600 text-white shadow-lg hover:shadow-xl scale-105' 
                  : 'bg-white/60 backdrop-blur-xl text-slate-700 border border-white/40 shadow-md hover:shadow-lg hover:scale-105 hover:border-teal-200'
              }`}
            >
              {category.name}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Results Gallery - Glassmorphism -->
    <section class="py-12 md:py-20 bg-gradient-to-b from-slate-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-8">
          
          {featuredCases.map((caseItem) => (
            <div class="group relative bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300 hover:scale-105">
              <div class={`aspect-w-4 aspect-h-3 bg-gradient-to-br from-${caseItem.color}-100/80 to-cyan-200/80 backdrop-blur-sm flex items-center justify-center h-48 md:h-56 relative overflow-hidden`}>
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent"></div>
                <div class="relative text-center p-6 lg:p-8">
                  <div class="w-16 h-16 md:w-20 md:h-20 bg-white/80 backdrop-blur-sm rounded-2xl flex items-center justify-center mx-auto mb-3 md:mb-4 shadow-lg group-hover:scale-110 transition-transform duration-300">
                    <svg class={`w-8 h-8 md:w-10 md:h-10 text-${caseItem.color}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <p class={`text-${caseItem.color}-700 font-bold text-sm md:text-base`}>Before & After</p>
                  <p class={`text-xs md:text-sm text-${caseItem.color}-600 font-medium`}>{caseItem.treatment}</p>
                </div>
              </div>
              <div class="p-4 md:p-5 lg:p-6 bg-white/40 backdrop-blur-sm">
                <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">{caseItem.title}</h3>
                <p class="text-xs md:text-sm text-slate-700 mb-4 leading-relaxed font-medium">
                  {caseItem.description}
                </p>
                <div class="flex items-center justify-between">
                  <span class={`text-xs bg-${caseItem.color}-100/80 text-${caseItem.color}-800 px-2.5 py-1 rounded-full font-semibold`}>
                    {caseItem.doctor}
                  </span>
                  <span class="text-xs text-slate-600 font-medium">{caseItem.duration}</span>
                </div>
              </div>
            </div>
          ))}

        </div>

        <!-- Load More -->
        <div class="text-center mt-8 md:mt-16">
          <button class="bg-gradient-to-r from-teal-600 to-cyan-600 text-white px-6 md:px-8 py-3 md:py-3.5 rounded-2xl text-sm md:text-base font-bold hover:from-teal-700 hover:to-cyan-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105">
            Load More Cases
          </button>
        </div>
      </div>
    </section>

    <!-- CTA Section - Modern -->
    <section class="relative py-12 md:py-20 bg-gradient-to-br from-teal-600 via-cyan-600 to-emerald-600 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-4 left-4 w-20 h-20 bg-white rounded-full blur-2xl"></div>
        <div class="absolute top-20 right-8 w-16 h-16 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-8 left-12 w-24 h-24 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-16 right-4 w-12 h-12 bg-white rounded-full blur-2xl"></div>
      </div>
      
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 md:mb-6 leading-tight">
          Ready for Your Transformation?
        </h2>
        <p class="text-base md:text-xl text-white/90 mb-6 md:mb-8 leading-relaxed">
          Join hundreds of satisfied patients who achieved their perfect smile in Cancun.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-md sm:max-w-none mx-auto">
          <a href="/process" class="bg-white text-teal-700 px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-teal-50 transition-all duration-300 shadow-lg hover:shadow-xl text-center transform hover:scale-105">
            Get Your Free Assessment
          </a>
          <a href="/specialists" class="border-2 border-white text-white px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-white hover:text-teal-700 transition-all duration-300 text-center transform hover:scale-105">
            Meet Our Specialists
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
