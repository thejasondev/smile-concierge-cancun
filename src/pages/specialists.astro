---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import SpecialistCard from '../components/SpecialistCard.tsx';
import SpecialistsCarousel from '../components/SpecialistsCarousel.tsx';
import { specialists } from '../data/specialists';
import {
  generateBreadcrumbSchema,
  generateWebPageSchema,
} from '../seo/schemas';

const siteUrl = 'https://smile-concierge-cancun.vercel.app';
const breadcrumbs = [
  { name: 'Home', url: siteUrl },
  { name: 'Specialists', url: `${siteUrl}/specialists` },
];
---

<Layout
  title="Top Dentists in Cancun | Board-Certified Dental Specialists | Smile Concierge"
  description="Meet Cancun's top dental specialists. Board-certified experts in veneers, implants, and smile design. 10+ years experience, state-of-the-art clinics."
  keywords="dentists cancun, dental specialists mexico, cosmetic dentist cancun, implant specialist cancun, veneer specialist, best dentist cancun"
>
  <!-- Structured Data -->
  <script
    type="application/ld+json"
    set:html={generateBreadcrumbSchema(breadcrumbs)}
  />
  <script
    type="application/ld+json"
    set:html={generateWebPageSchema(
      'Our Dental Specialists',
      'Meet our world-class dental specialists in Cancun, Mexico',
      `${siteUrl}/specialists`
    )}
  />

  <Header client:load />
  <main>
    <!-- Hero Section - Glassmorphism -->
    <section
      class="from-cream via-sand/30 relative overflow-hidden bg-gradient-to-br to-white py-12 md:py-20"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-30">
        <div
          class="bg-forest/20 absolute top-10 left-10 h-32 w-32 rounded-full blur-3xl"
        >
        </div>
        <div
          class="bg-sage/20 absolute right-10 bottom-10 h-40 w-40 rounded-full blur-3xl"
        >
        </div>
      </div>

      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-8 text-center md:mb-16">
          <div
            class="mb-6 inline-flex items-center gap-2 rounded-full border border-white/40 bg-white/70 px-4 py-2 shadow-lg backdrop-blur-xl"
          >
            <svg
              class="text-forest h-5 w-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
            <span class="text-sm font-semibold text-slate-700">Expert Team</span
            >
          </div>

          <h1
            class="mb-4 text-3xl leading-tight font-bold text-slate-800 md:mb-6 md:text-4xl lg:text-5xl"
          >
            Meet Our World-Class Specialists
          </h1>
          <p
            class="mx-auto max-w-2xl text-base leading-relaxed text-slate-600 md:max-w-3xl md:text-xl"
          >
            Cancun's most recognized dental experts
            <span class="hidden md:inline"
              >, each with decades of experience and state-of-the-art clinics
              delivering exceptional results</span
            >
          </p>
        </div>
      </div>
    </section>

    <!-- Specialists Section -->
    <section class="bg-white py-12 md:py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- Mobile: Stacked Carousel -->
        <div class="md:hidden">
          <SpecialistsCarousel client:load />
        </div>

        <!-- Desktop: Grid Layout -->
        <div
          class="hidden gap-8 md:grid md:grid-cols-2 md:gap-10 lg:grid-cols-3 lg:gap-12"
        >
          {
            specialists.map((specialist) => (
              <SpecialistCard
                name={specialist.name}
                shortName={specialist.shortName}
                clinic={specialist.clinic}
                specialty={specialist.specialty}
                expertise={specialist.expertise}
                color={specialist.color}
                slug={specialist.slug}
                image={specialist.image}
              />
            ))
          }
        </div>
      </div>
    </section>

    <!-- Why Choose Our Specialists - Glassmorphism -->
    <section
      class="from-sand via-cream bg-gradient-to-br to-white py-12 md:py-20"
    >
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-8 text-center md:mb-16">
          <h2
            class="mb-4 text-2xl font-bold text-slate-800 md:mb-6 md:text-3xl lg:text-4xl"
          >
            Why Choose Our Specialists?
          </h2>
        </div>

        <div
          class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-6 lg:grid-cols-4 lg:gap-8"
        >
          <div
            class="group rounded-2xl border border-white/40 bg-white/60 p-5 text-center shadow-xl backdrop-blur-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl md:p-6"
          >
            <div
              class="bg-forest/10 mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-2xl shadow-md transition-transform duration-300 group-hover:scale-110 md:h-16 md:w-16"
            >
              <svg
                class="text-forest h-7 w-7 md:h-8 md:w-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="mb-2 text-sm font-bold text-slate-800 md:text-base">
              Certified Excellence
            </h3>
            <p
              class="text-xs leading-relaxed font-medium text-slate-700 md:text-sm"
            >
              Board-certified specialists with international recognition
            </p>
          </div>

          <div
            class="group rounded-2xl border border-white/40 bg-white/60 p-5 text-center shadow-xl backdrop-blur-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl md:p-6"
          >
            <div
              class="bg-sage/10 mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-2xl shadow-md transition-transform duration-300 group-hover:scale-110 md:h-16 md:w-16"
            >
              <svg
                class="text-sage h-7 w-7 md:h-8 md:w-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="mb-2 text-sm font-bold text-slate-800 md:text-base">
              Latest Technology
            </h3>
            <p
              class="text-xs leading-relaxed font-medium text-slate-700 md:text-sm"
            >
              State-of-the-art equipment and advanced techniques
            </p>
          </div>

          <div
            class="group rounded-2xl border border-white/40 bg-white/60 p-5 text-center shadow-xl backdrop-blur-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl md:p-6"
          >
            <div
              class="bg-forest-light/10 mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-2xl shadow-md transition-transform duration-300 group-hover:scale-110 md:h-16 md:w-16"
            >
              <svg
                class="text-forest-light h-7 w-7 md:h-8 md:w-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-2 text-sm font-bold text-slate-800 md:text-base">
              Patient Care
            </h3>
            <p
              class="text-xs leading-relaxed font-medium text-slate-700 md:text-sm"
            >
              Personalized attention and comfort throughout treatment
            </p>
          </div>

          <div
            class="group rounded-2xl border border-white/40 bg-white/60 p-5 text-center shadow-xl backdrop-blur-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl md:p-6"
          >
            <div
              class="bg-sand/30 mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-2xl shadow-md transition-transform duration-300 group-hover:scale-110 md:h-16 md:w-16"
            >
              <svg
                class="text-forest h-7 w-7 md:h-8 md:w-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
                ></path>
              </svg>
            </div>
            <h3 class="mb-2 text-sm font-bold text-slate-800 md:text-base">
              Value & Quality
            </h3>
            <p
              class="text-xs leading-relaxed font-medium text-slate-700 md:text-sm"
            >
              Premium results at a fraction of international costs
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section - Modern -->
    <section
      class="from-forest via-sage to-forest-light relative overflow-hidden bg-gradient-to-br py-12 md:py-20"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div
          class="absolute top-4 left-4 h-20 w-20 rounded-full bg-white blur-2xl"
        >
        </div>
        <div
          class="absolute top-20 right-8 h-16 w-16 rounded-full bg-white blur-2xl"
        >
        </div>
        <div
          class="absolute bottom-8 left-12 h-24 w-24 rounded-full bg-white blur-2xl"
        >
        </div>
        <div
          class="absolute right-4 bottom-16 h-12 w-12 rounded-full bg-white blur-2xl"
        >
        </div>
      </div>

      <div class="relative mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
        <h2
          class="mb-4 text-2xl leading-tight font-bold text-white md:mb-6 md:text-3xl lg:text-4xl"
        >
          Ready to Meet Your Specialist?
        </h2>
        <p
          class="mb-6 text-base leading-relaxed text-white/90 md:mb-8 md:text-xl"
        >
          Schedule a consultation with one of our world-class dental experts
          today.
        </p>
        <div
          class="mx-auto flex max-w-md flex-col justify-center gap-3 sm:max-w-none sm:flex-row sm:gap-4"
        >
          <a
            href="https://wa.me/529983889184?text=Hello!%20I'm%20interested%20in%20receiving%20a%20free%20dental%20assessment.%20I%20would%20like%20to%20learn%20more%20about%20your%20services%20and%20how%20you%20can%20help%20me%20achieve%20my%20perfect%20smile.%20Thank%20you!"
            target="_blank"
            rel="noopener noreferrer"
            class="text-forest hover:bg-sand transform rounded-2xl bg-white px-6 py-3 text-center text-base font-bold shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl md:px-8 md:py-4 md:text-lg"
          >
            Schedule Free Consultation
          </a>
          <a
            href="tel:+529983889184"
            class="hover:text-forest transform rounded-2xl border-2 border-white px-6 py-3 text-center text-base font-bold text-white transition-all duration-300 hover:scale-105 hover:bg-white md:px-8 md:py-4 md:text-lg"
          >
            Call Now
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
