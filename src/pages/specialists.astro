---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';

// Specialists data
const specialists = [
  {
    name: 'Dr. Ambar Vázquez',
    clinic: 'Ambar Vázquez Dental Studio',
    specialty: 'Specialist in natural smile design and advanced aesthetics',
    treatments: [
      'Smile design with injected composite veneers',
      'Smile design with layered composite veneers',
      'Smile design with layered Emax porcelain veneers'
    ],
    highlight: 'Natural results, perfect proportions, and facial harmony',
    color: 'teal'
  },
  {
    name: 'Dr. Manuel García',
    clinic: 'Esencial Dental Cancún',
    specialty: 'Specialist in oral rehabilitation and advanced dental aesthetics',
    treatments: [
      'Full-mouth rehabilitation for patients with bruxism',
      'Tooth reconstruction using direct and indirect resin techniques',
      'Personalized smile designs'
    ],
    highlight: 'The art of restoring form, function, and beauty to your smile',
    color: 'cyan'
  },
  {
    name: 'Dr. Xavier Pavón',
    clinic: 'Centro Dental Implantológico',
    specialty: 'Specialist in Implantology and Advanced Rehabilitation',
    treatments: [
      'Dental implants',
      'Bone grafting',
      'Sinus lift',
      'Zygomatic implants',
      'All-on-4 / All-on-6 rehabilitations'
    ],
    highlight: 'Safe, aesthetic, and long-lasting solutions to restore your smile',
    color: 'emerald'
  }
];
---

<Layout title="Our Specialists - Smile Concierge Cancun">
  <Header client:load />
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-teal-50 to-cyan-50 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-bold text-slate-800 mb-6">
            Meet Our World-Class Specialists
          </h1>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto">
            Cancun's most recognized dental experts, each with decades of experience 
            and state-of-the-art clinics delivering exceptional results.
          </p>
        </div>
      </div>
    </section>

    <!-- Specialists Grid -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-16">
          
          {specialists.map((specialist, index) => (
            <div class={`bg-gradient-to-br from-slate-50 to-white rounded-3xl p-8 lg:p-12 shadow-xl border border-slate-100 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
                <div>
                  <div class={
                    specialist.color === 'teal' 
                      ? 'w-20 h-20 lg:w-24 lg:h-24 bg-teal-100 rounded-full flex items-center justify-center mb-6 lg:mb-8'
                      : specialist.color === 'cyan'
                      ? 'w-20 h-20 lg:w-24 lg:h-24 bg-cyan-100 rounded-full flex items-center justify-center mb-6 lg:mb-8'
                      : 'w-20 h-20 lg:w-24 lg:h-24 bg-emerald-100 rounded-full flex items-center justify-center mb-6 lg:mb-8'
                  }>
                    <svg class={
                      specialist.color === 'teal' 
                        ? 'w-10 h-10 lg:w-12 lg:h-12 text-teal-600'
                        : specialist.color === 'cyan'
                        ? 'w-10 h-10 lg:w-12 lg:h-12 text-cyan-600'
                        : 'w-10 h-10 lg:w-12 lg:h-12 text-emerald-600'
                    } fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  
                  <h2 class="text-2xl lg:text-3xl font-bold text-slate-800 mb-3 lg:mb-4">{specialist.name}</h2>
                  <p class={
                    specialist.color === 'teal' 
                      ? 'text-teal-600 font-semibold text-base lg:text-lg mb-3 lg:mb-4'
                      : specialist.color === 'cyan'
                      ? 'text-cyan-600 font-semibold text-base lg:text-lg mb-3 lg:mb-4'
                      : 'text-emerald-600 font-semibold text-base lg:text-lg mb-3 lg:mb-4'
                  }>{specialist.clinic}</p>
                  <p class="text-slate-600 mb-6 text-sm lg:text-base">{specialist.specialty}</p>
                  
                  <div class={
                    specialist.color === 'teal' 
                      ? 'bg-teal-50 rounded-xl p-4 lg:p-6 mb-6 lg:mb-8 border border-teal-100'
                      : specialist.color === 'cyan'
                      ? 'bg-cyan-50 rounded-xl p-4 lg:p-6 mb-6 lg:mb-8 border border-cyan-100'
                      : 'bg-emerald-50 rounded-xl p-4 lg:p-6 mb-6 lg:mb-8 border border-emerald-100'
                  }>
                    <h3 class={
                      specialist.color === 'teal' 
                        ? 'font-semibold text-teal-800 mb-3 text-sm lg:text-base'
                        : specialist.color === 'cyan'
                        ? 'font-semibold text-cyan-800 mb-3 text-sm lg:text-base'
                        : 'font-semibold text-emerald-800 mb-3 text-sm lg:text-base'
                    }>Specializations:</h3>
                    <ul class="space-y-2">
                      {specialist.treatments.map((treatment) => (
                        <li class="flex items-start text-slate-700 text-sm lg:text-base">
                          <svg class={
                            specialist.color === 'teal' 
                              ? 'w-4 h-4 text-teal-500 mr-3 mt-0.5 flex-shrink-0'
                              : specialist.color === 'cyan'
                              ? 'w-4 h-4 text-cyan-500 mr-3 mt-0.5 flex-shrink-0'
                              : 'w-4 h-4 text-emerald-500 mr-3 mt-0.5 flex-shrink-0'
                          } fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                          {treatment}
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div class={
                    specialist.color === 'teal' 
                      ? 'bg-gradient-to-r from-slate-100 to-teal-50 rounded-xl p-4 lg:p-6 mb-6 lg:mb-8 border border-slate-200'
                      : specialist.color === 'cyan'
                      ? 'bg-gradient-to-r from-slate-100 to-cyan-50 rounded-xl p-4 lg:p-6 mb-6 lg:mb-8 border border-slate-200'
                      : 'bg-gradient-to-r from-slate-100 to-emerald-50 rounded-xl p-4 lg:p-6 mb-6 lg:mb-8 border border-slate-200'
                  }>
                    <p class="text-slate-700 italic text-sm lg:text-base">"{specialist.highlight}"</p>
                  </div>

                  <button class={
                    specialist.color === 'teal' 
                      ? 'bg-gradient-to-r from-teal-600 to-cyan-600 text-white px-6 lg:px-8 py-3 rounded-xl font-semibold hover:from-teal-700 hover:to-cyan-700 transition-all duration-300 text-sm lg:text-base w-full lg:w-auto'
                      : specialist.color === 'cyan'
                      ? 'bg-gradient-to-r from-cyan-600 to-teal-600 text-white px-6 lg:px-8 py-3 rounded-xl font-semibold hover:from-cyan-700 hover:to-teal-700 transition-all duration-300 text-sm lg:text-base w-full lg:w-auto'
                      : 'bg-gradient-to-r from-emerald-600 to-cyan-600 text-white px-6 lg:px-8 py-3 rounded-xl font-semibold hover:from-emerald-700 hover:to-cyan-700 transition-all duration-300 text-sm lg:text-base w-full lg:w-auto'
                  }>
                    Schedule with {specialist.name.split(' ')[1]}
                  </button>
                </div>
                
                <div class={
                  `${specialist.color === 'teal' 
                    ? 'bg-gradient-to-br from-teal-100 to-cyan-200'
                    : specialist.color === 'cyan'
                    ? 'bg-gradient-to-br from-cyan-100 to-cyan-200'
                    : 'bg-gradient-to-br from-emerald-100 to-cyan-200'
                  } rounded-2xl p-6 lg:p-8 text-center ${index % 2 === 1 ? 'lg:order-first' : ''}`
                }>
                  <svg class={
                    specialist.color === 'teal' 
                      ? 'w-24 h-24 lg:w-32 lg:h-32 text-teal-500 mx-auto mb-4'
                      : specialist.color === 'cyan'
                      ? 'w-24 h-24 lg:w-32 lg:h-32 text-cyan-500 mx-auto mb-4'
                      : 'w-24 h-24 lg:w-32 lg:h-32 text-emerald-500 mx-auto mb-4'
                  } fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <p class={
                    specialist.color === 'teal' 
                      ? 'text-teal-700 font-semibold text-sm lg:text-base'
                      : specialist.color === 'cyan'
                      ? 'text-cyan-700 font-semibold text-sm lg:text-base'
                      : 'text-emerald-700 font-semibold text-sm lg:text-base'
                  }>{specialist.name}</p>
                  <p class={
                    specialist.color === 'teal' 
                      ? 'text-teal-600 text-xs lg:text-sm'
                      : specialist.color === 'cyan'
                      ? 'text-cyan-600 text-xs lg:text-sm'
                      : 'text-emerald-600 text-xs lg:text-sm'
                  }>Professional Photo</p>
                </div>
              </div>
            </div>
          ))}

        </div>
      </div>
    </section>

    <!-- Why Choose Our Specialists -->
    <section class="py-20 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-6">
            Why Choose Our Specialists?
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center p-6 bg-white rounded-xl shadow-md border border-slate-100">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-800 mb-2">Certified Excellence</h3>
            <p class="text-slate-600 text-sm">Board-certified specialists with international recognition</p>
          </div>

          <div class="text-center p-6 bg-white rounded-xl shadow-md border border-slate-100">
            <div class="w-16 h-16 bg-cyan-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-800 mb-2">Latest Technology</h3>
            <p class="text-slate-600 text-sm">State-of-the-art equipment and advanced techniques</p>
          </div>

          <div class="text-center p-6 bg-white rounded-xl shadow-md border border-slate-100">
            <div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-800 mb-2">Patient Care</h3>
            <p class="text-slate-600 text-sm">Personalized attention and comfort throughout treatment</p>
          </div>

          <div class="text-center p-6 bg-white rounded-xl shadow-md border border-slate-100">
            <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-slate-800 mb-2">Value & Quality</h3>
            <p class="text-slate-600 text-sm">Premium results at a fraction of international costs</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-teal-600 to-cyan-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to Meet Your Specialist?
        </h2>
        <p class="text-xl text-teal-100 mb-8">
          Schedule a consultation with one of our world-class dental experts today.
        </p>
        <button class="bg-white text-teal-700 px-8 py-4 rounded-xl text-lg font-semibold hover:bg-teal-50 transition-colors duration-200">
          Schedule Free Consultation
        </button>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
