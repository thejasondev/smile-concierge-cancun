---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';

// Specialists data
const specialists = [
  {
    name: 'Dr. Ambar Vázquez',
    clinic: 'Ambar Vázquez Dental Studio',
    specialty: 'Specialist in natural smile design and advanced aesthetics',
    treatments: [
      'Smile design with injected composite veneers',
      'Smile design with layered composite veneers',
      'Smile design with layered Emax porcelain veneers'
    ],
    highlight: 'Natural results, perfect proportions, and facial harmony',
    color: 'teal'
  },
  {
    name: 'Dr. Manuel García',
    clinic: 'Esencial Dental Cancún',
    specialty: 'Specialist in oral rehabilitation and advanced dental aesthetics',
    treatments: [
      'Full-mouth rehabilitation for patients with bruxism',
      'Tooth reconstruction using direct and indirect resin techniques',
      'Personalized smile designs'
    ],
    highlight: 'The art of restoring form, function, and beauty to your smile',
    color: 'cyan'
  },
  {
    name: 'Dr. Xavier Pavón',
    clinic: 'Centro Dental Implantológico',
    specialty: 'Specialist in Implantology and Advanced Rehabilitation',
    treatments: [
      'Dental implants',
      'Bone grafting',
      'Sinus lift',
      'Zygomatic implants',
      'All-on-4 / All-on-6 rehabilitations'
    ],
    highlight: 'Safe, aesthetic, and long-lasting solutions to restore your smile',
    color: 'emerald'
  }
];
---

<Layout title="Our Specialists - Smile Concierge Cancun">
  <Header client:load />
  <main>
    <!-- Hero Section - Glassmorphism -->
    <section class="relative bg-gradient-to-br from-teal-50 via-cyan-50 to-emerald-50 py-12 md:py-20 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-10 left-10 w-32 h-32 bg-teal-300 rounded-full blur-3xl"></div>
        <div class="absolute bottom-10 right-10 w-40 h-40 bg-cyan-300 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <div class="inline-flex items-center gap-2 bg-white/70 backdrop-blur-xl px-4 py-2 rounded-full border border-white/40 shadow-lg mb-6">
            <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="text-sm font-semibold text-slate-700">Expert Team</span>
          </div>
          
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-4 md:mb-6 leading-tight">
            Meet Our World-Class Specialists
          </h1>
          <p class="text-base md:text-xl text-slate-600 max-w-2xl md:max-w-3xl mx-auto leading-relaxed">
            Cancun's most recognized dental experts
            <span class="hidden md:inline">, each with decades of experience and state-of-the-art clinics delivering exceptional results</span>
          </p>
        </div>
      </div>
    </section>

    <!-- Specialists Grid - Glassmorphism -->
    <section class="py-12 md:py-20 bg-gradient-to-b from-white to-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-8 md:space-y-16">
          
          {specialists.map((specialist, index) => (
            <div class={`group relative bg-white/60 backdrop-blur-xl rounded-3xl p-6 md:p-8 lg:p-12 border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              <div class={`absolute inset-0 bg-gradient-to-br ${specialist.color === 'teal' ? 'from-teal-500/5' : specialist.color === 'cyan' ? 'from-cyan-500/5' : 'from-emerald-500/5'} to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300`}></div>
              
              <div class="relative grid lg:grid-cols-2 gap-6 md:gap-8 lg:gap-12 items-center">
                <div>
                  <div class={
                    specialist.color === 'teal' 
                      ? 'w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-gradient-to-br from-teal-100 to-teal-50 rounded-2xl flex items-center justify-center mb-4 md:mb-6 lg:mb-8 shadow-lg group-hover:scale-110 transition-transform duration-300'
                      : specialist.color === 'cyan'
                      ? 'w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-gradient-to-br from-cyan-100 to-cyan-50 rounded-2xl flex items-center justify-center mb-4 md:mb-6 lg:mb-8 shadow-lg group-hover:scale-110 transition-transform duration-300'
                      : 'w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-gradient-to-br from-emerald-100 to-emerald-50 rounded-2xl flex items-center justify-center mb-4 md:mb-6 lg:mb-8 shadow-lg group-hover:scale-110 transition-transform duration-300'
                  }>
                    <svg class={
                      specialist.color === 'teal' 
                        ? 'w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-teal-600'
                        : specialist.color === 'cyan'
                        ? 'w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-cyan-600'
                        : 'w-8 h-8 md:w-10 md:h-10 lg:w-12 lg:h-12 text-emerald-600'
                    } fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  
                  <h2 class="text-xl md:text-2xl lg:text-3xl font-bold text-slate-800 mb-2 md:mb-3 lg:mb-4">{specialist.name}</h2>
                  <p class={
                    specialist.color === 'teal' 
                      ? 'font-bold bg-gradient-to-r from-teal-600 to-teal-500 bg-clip-text text-transparent text-sm md:text-base lg:text-lg mb-2 md:mb-3 lg:mb-4'
                      : specialist.color === 'cyan'
                      ? 'font-bold bg-gradient-to-r from-cyan-600 to-cyan-500 bg-clip-text text-transparent text-sm md:text-base lg:text-lg mb-2 md:mb-3 lg:mb-4'
                      : 'font-bold bg-gradient-to-r from-emerald-600 to-emerald-500 bg-clip-text text-transparent text-sm md:text-base lg:text-lg mb-2 md:mb-3 lg:mb-4'
                  }>{specialist.clinic}</p>
                  <p class="text-slate-700 font-medium mb-4 md:mb-6 text-sm lg:text-base">{specialist.specialty}</p>
                  
                  <div class={
                    specialist.color === 'teal' 
                      ? 'bg-teal-50/60 backdrop-blur-sm rounded-2xl p-4 md:p-5 lg:p-6 mb-4 md:mb-6 lg:mb-8 border border-teal-100/50 shadow-md'
                      : specialist.color === 'cyan'
                      ? 'bg-cyan-50/60 backdrop-blur-sm rounded-2xl p-4 md:p-5 lg:p-6 mb-4 md:mb-6 lg:mb-8 border border-cyan-100/50 shadow-md'
                      : 'bg-emerald-50/60 backdrop-blur-sm rounded-2xl p-4 md:p-5 lg:p-6 mb-4 md:mb-6 lg:mb-8 border border-emerald-100/50 shadow-md'
                  }>
                    <h3 class={
                      specialist.color === 'teal' 
                        ? 'font-semibold text-teal-800 mb-3 text-sm lg:text-base'
                        : specialist.color === 'cyan'
                        ? 'font-semibold text-cyan-800 mb-3 text-sm lg:text-base'
                        : 'font-semibold text-emerald-800 mb-3 text-sm lg:text-base'
                    }>Specializations:</h3>
                    <ul class="space-y-2">
                      {specialist.treatments.map((treatment) => (
                        <li class="flex items-start text-slate-700 text-sm lg:text-base">
                          <svg class={
                            specialist.color === 'teal' 
                              ? 'w-4 h-4 text-teal-500 mr-3 mt-0.5 flex-shrink-0'
                              : specialist.color === 'cyan'
                              ? 'w-4 h-4 text-cyan-500 mr-3 mt-0.5 flex-shrink-0'
                              : 'w-4 h-4 text-emerald-500 mr-3 mt-0.5 flex-shrink-0'
                          } fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                          {treatment}
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div class={
                    specialist.color === 'teal' 
                      ? 'bg-white/50 backdrop-blur-sm rounded-2xl p-4 md:p-5 lg:p-6 mb-4 md:mb-6 lg:mb-8 border border-white/40 shadow-md'
                      : specialist.color === 'cyan'
                      ? 'bg-white/50 backdrop-blur-sm rounded-2xl p-4 md:p-5 lg:p-6 mb-4 md:mb-6 lg:mb-8 border border-white/40 shadow-md'
                      : 'bg-white/50 backdrop-blur-sm rounded-2xl p-4 md:p-5 lg:p-6 mb-4 md:mb-6 lg:mb-8 border border-white/40 shadow-md'
                  }>
                    <p class="text-slate-700 italic text-sm lg:text-base font-medium leading-relaxed">"{specialist.highlight}"</p>
                  </div>

                  <a href="/process" class={
                    specialist.color === 'teal' 
                      ? 'inline-block bg-gradient-to-r from-teal-600 to-cyan-600 text-white px-6 lg:px-8 py-3 md:py-3.5 rounded-2xl font-bold hover:from-teal-700 hover:to-cyan-700 transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto text-center hover:scale-105'
                      : specialist.color === 'cyan'
                      ? 'inline-block bg-gradient-to-r from-cyan-600 to-teal-600 text-white px-6 lg:px-8 py-3 md:py-3.5 rounded-2xl font-bold hover:from-cyan-700 hover:to-teal-700 transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto text-center hover:scale-105'
                      : 'inline-block bg-gradient-to-r from-emerald-600 to-cyan-600 text-white px-6 lg:px-8 py-3 md:py-3.5 rounded-2xl font-bold hover:from-emerald-700 hover:to-cyan-700 transition-all duration-300 shadow-lg hover:shadow-xl text-sm lg:text-base w-full lg:w-auto text-center hover:scale-105'
                  }>
                    Schedule with {specialist.name.split(' ')[1]}
                  </a>
                </div>
                
                <div class={
                  `${specialist.color === 'teal' 
                    ? 'bg-gradient-to-br from-teal-100 to-cyan-200'
                    : specialist.color === 'cyan'
                    ? 'bg-gradient-to-br from-cyan-100 to-cyan-200'
                    : 'bg-gradient-to-br from-emerald-100 to-cyan-200'
                  } rounded-2xl p-6 lg:p-8 text-center ${index % 2 === 1 ? 'lg:order-first' : ''}`
                }>
                  <svg class={
                    specialist.color === 'teal' 
                      ? 'w-24 h-24 lg:w-32 lg:h-32 text-teal-500 mx-auto mb-4'
                      : specialist.color === 'cyan'
                      ? 'w-24 h-24 lg:w-32 lg:h-32 text-cyan-500 mx-auto mb-4'
                      : 'w-24 h-24 lg:w-32 lg:h-32 text-emerald-500 mx-auto mb-4'
                  } fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <p class={
                    specialist.color === 'teal' 
                      ? 'text-teal-700 font-semibold text-sm lg:text-base'
                      : specialist.color === 'cyan'
                      ? 'text-cyan-700 font-semibold text-sm lg:text-base'
                      : 'text-emerald-700 font-semibold text-sm lg:text-base'
                  }>{specialist.name}</p>
                  <p class={
                    specialist.color === 'teal' 
                      ? 'text-teal-600 text-xs lg:text-sm'
                      : specialist.color === 'cyan'
                      ? 'text-cyan-600 text-xs lg:text-sm'
                      : 'text-emerald-600 text-xs lg:text-sm'
                  }>Professional Photo</p>
                </div>
              </div>
            </div>
          ))}

        </div>
      </div>
    </section>

    <!-- Why Choose Our Specialists - Glassmorphism -->
    <section class="py-12 md:py-20 bg-gradient-to-b from-slate-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-slate-800 mb-4 md:mb-6">
            Why Choose Our Specialists?
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 lg:gap-8">
          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-teal-100 to-teal-50 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Certified Excellence</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">Board-certified specialists with international recognition</p>
          </div>

          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-cyan-100 to-cyan-50 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Latest Technology</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">State-of-the-art equipment and advanced techniques</p>
          </div>

          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-emerald-100 to-emerald-50 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Patient Care</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">Personalized attention and comfort throughout treatment</p>
          </div>

          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-amber-100 to-amber-50 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Value & Quality</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">Premium results at a fraction of international costs</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section - Modern -->
    <section class="relative py-12 md:py-20 bg-gradient-to-br from-teal-600 via-cyan-600 to-emerald-600 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-4 left-4 w-20 h-20 bg-white rounded-full blur-2xl"></div>
        <div class="absolute top-20 right-8 w-16 h-16 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-8 left-12 w-24 h-24 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-16 right-4 w-12 h-12 bg-white rounded-full blur-2xl"></div>
      </div>
      
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 md:mb-6 leading-tight">
          Ready to Meet Your Specialist?
        </h2>
        <p class="text-base md:text-xl text-white/90 mb-6 md:mb-8 leading-relaxed">
          Schedule a consultation with one of our world-class dental experts today.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-md sm:max-w-none mx-auto">
          <a href="/process" class="bg-white text-teal-700 px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-teal-50 transition-all duration-300 shadow-lg hover:shadow-xl text-center transform hover:scale-105">
            Schedule Free Consultation
          </a>
          <a href="tel:+529984567890" class="border-2 border-white text-white px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-white hover:text-teal-700 transition-all duration-300 text-center transform hover:scale-105">
            Call Now
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
