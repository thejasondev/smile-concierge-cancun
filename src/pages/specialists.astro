---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import SpecialistCard from '../components/SpecialistCard.tsx';
import { specialists } from '../data/specialists';
---

<Layout title="Specialists - Smile Concierge Cancun">
  <Header client:load />
  <main>
    <!-- Hero Section - Glassmorphism -->
    <section class="relative bg-gradient-to-br from-cream via-sand/30 to-white py-12 md:py-20 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-10 left-10 w-32 h-32 bg-forest/20 rounded-full blur-3xl"></div>
        <div class="absolute bottom-10 right-10 w-40 h-40 bg-sage/20 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <div class="inline-flex items-center gap-2 bg-white/70 backdrop-blur-xl px-4 py-2 rounded-full border border-white/40 shadow-lg mb-6">
            <svg class="w-5 h-5 text-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="text-sm font-semibold text-slate-700">Expert Team</span>
          </div>
          
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-4 md:mb-6 leading-tight">
            Meet Our World-Class Specialists
          </h1>
          <p class="text-base md:text-xl text-slate-600 max-w-2xl md:max-w-3xl mx-auto leading-relaxed">
            Cancun's most recognized dental experts
            <span class="hidden md:inline">, each with decades of experience and state-of-the-art clinics delivering exceptional results</span>
          </p>
        </div>
      </div>
    </section>

    <!-- Specialists Grid - Modern Cards -->
    <section class="py-12 md:py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10 lg:gap-12">
          {specialists.map((specialist) => (
            <SpecialistCard
              client:load
              name={specialist.name}
              shortName={specialist.shortName}
              clinic={specialist.clinic}
              specialty={specialist.specialty}
              expertise={specialist.expertise}
              color={specialist.color}
              slug={specialist.slug}
              image={specialist.image}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Why Choose Our Specialists - Glassmorphism -->
    <section class="py-12 md:py-20 bg-gradient-to-br from-sand via-cream to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 md:mb-16">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-slate-800 mb-4 md:mb-6">
            Why Choose Our Specialists?
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 lg:gap-8">
          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-forest/10 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Certified Excellence</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">Board-certified specialists with international recognition</p>
          </div>

          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-sage/10 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Latest Technology</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">State-of-the-art equipment and advanced techniques</p>
          </div>

          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-forest-light/10 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-forest-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Patient Care</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">Personalized attention and comfort throughout treatment</p>
          </div>

          <div class="group text-center p-5 md:p-6 bg-white/60 backdrop-blur-xl rounded-2xl border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            <div class="w-14 h-14 md:w-16 md:h-16 bg-sand/30 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-md group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-sm md:text-base">Value & Quality</h3>
            <p class="text-slate-700 text-xs md:text-sm font-medium leading-relaxed">Premium results at a fraction of international costs</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section - Modern -->
    <section class="relative py-12 md:py-20 bg-gradient-to-br from-forest via-sage to-forest-light overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-4 left-4 w-20 h-20 bg-white rounded-full blur-2xl"></div>
        <div class="absolute top-20 right-8 w-16 h-16 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-8 left-12 w-24 h-24 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-16 right-4 w-12 h-12 bg-white rounded-full blur-2xl"></div>
      </div>
      
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 md:mb-6 leading-tight">
          Ready to Meet Your Specialist?
        </h2>
        <p class="text-base md:text-xl text-white/90 mb-6 md:mb-8 leading-relaxed">
          Schedule a consultation with one of our world-class dental experts today.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-md sm:max-w-none mx-auto">
          <a 
          href="https://wa.me/529983889184?text=Hello!%20I'm%20interested%20in%20receiving%20a%20free%20dental%20assessment.%20I%20would%20like%20to%20learn%20more%20about%20your%20services%20and%20how%20you%20can%20help%20me%20achieve%20my%20perfect%20smile.%20Thank%20you!"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-white text-forest px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-sand transition-all duration-300 shadow-lg hover:shadow-xl text-center transform hover:scale-105">
            Schedule Free Consultation
          </a> 
          <a href="tel:+529983889184" class="border-2 border-white text-white px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-white hover:text-forest transition-all duration-300 text-center transform hover:scale-105">
            Call Now
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
