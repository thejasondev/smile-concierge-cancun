---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.tsx';
import Footer from '../../components/Footer.tsx';
import { specialists, type SpecialistData } from '../../data/specialists';

export async function getStaticPaths() {
  return specialists.map((specialist) => ({
    params: { slug: specialist.slug },
    props: { specialist },
  }));
}

interface Props {
  specialist: SpecialistData;
}

const { specialist } = Astro.props;

const getColorClasses = (color: string) => {
  const colors = {
    forest: {
      bg: 'bg-forest/10',
      text: 'text-forest',
      border: 'border-forest/20',
      gradient: 'from-forest to-sage',
      bgSolid: 'bg-forest',
      borderSolid: 'border-forest',
      ring: 'ring-forest/30'
    },
    sage: {
      bg: 'bg-sage/10',
      text: 'text-sage',
      border: 'border-sage/20',
      gradient: 'from-sage to-forest',
      bgSolid: 'bg-sage',
      borderSolid: 'border-sage',
      ring: 'ring-sage/30'
    },
    'forest-light': {
      bg: 'bg-forest-light/10',
      text: 'text-forest-light',
      border: 'border-forest-light/20',
      gradient: 'from-forest-light to-sage',
      bgSolid: 'bg-forest-light',
      borderSolid: 'border-forest-light',
      ring: 'ring-forest-light/30'
    }
  };
  return colors[color as keyof typeof colors];
};

const colorClasses = getColorClasses(specialist.color);

// WhatsApp URL con el nombre del especialista interpolado correctamente
const whatsappUrl = `https://wa.me/529983889184?text=Hello!%20I'm%20interested%20in%20scheduling%20a%20consultation%20with%20${encodeURIComponent(specialist.shortName)}.%20I%20would%20like%20to%20learn%20more%20about%20your%20services.%20Thank%20you!`;
---

<Layout title={`${specialist.shortName} - Smile Concierge Cancun`}>
  <Header client:load />
  <main>
    <!-- Hero Section - Specialist Profile -->
    <section class="relative bg-gradient-to-br from-cream via-sand/30 to-white py-12 md:py-20 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-10 left-10 w-32 h-32 bg-forest/20 rounded-full blur-3xl"></div>
        <div class="absolute bottom-10 right-10 w-40 h-40 bg-sage/20 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Back Button -->
        <a 
          href="/specialists" 
          class="inline-flex items-center gap-2 text-slate-700 hover:text-forest font-medium mb-6 md:mb-8 transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Specialists
        </a>

        <div class="bg-white/70 backdrop-blur-xl rounded-3xl p-6 md:p-10 lg:p-12 border border-white/40 shadow-2xl">
          <!-- Mobile: Centered layout | Desktop: Side-by-side -->
          <div class="flex flex-col lg:flex-row items-center lg:items-start gap-8 lg:gap-12">
            
            <!-- Profile Image - Larger and Prominent -->
            <div class="flex-shrink-0">
              {specialist.image ? (
                <div class="relative group">
                  <!-- Decorative ring -->
                  <div class={`absolute -inset-3 bg-gradient-to-br ${colorClasses.gradient} rounded-full opacity-20 blur-md group-hover:opacity-30 transition-opacity duration-500`}></div>
                  
                  <!-- Main image container -->
                  <div class={`relative w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 rounded-full overflow-hidden border-4 border-white shadow-2xl ring-4 ${colorClasses.ring} ring-offset-4 ring-offset-white/50`}>
                    <img 
                      src={specialist.image} 
                      alt={specialist.shortName}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                    />
                  </div>
                  
                  <!-- Accent badge -->
                  <div class={`absolute -bottom-2 -right-2 w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br ${colorClasses.gradient} rounded-2xl flex items-center justify-center shadow-lg`}>
                    <svg class="w-7 h-7 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                </div>
              ) : (
                <div class={`w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 bg-gradient-to-br ${colorClasses.gradient} rounded-full flex items-center justify-center shadow-2xl`}>
                  <svg class="w-20 h-20 md:w-24 md:h-24 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              )}
            </div>

            <!-- Info Section -->
            <div class="flex-1 text-center lg:text-left">
              <!-- Name -->
              <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-5xl font-bold text-slate-800 mb-3">{specialist.shortName}</h1>
              
              <!-- Clinic -->
              <p class={`text-lg md:text-xl lg:text-2xl font-semibold ${colorClasses.text} mb-2`}>{specialist.clinic}</p>
              
              <!-- Specialty -->
              <p class="text-base md:text-lg text-slate-600 font-medium mb-6">{specialist.specialty}</p>
              
              <!-- Expertise Tags -->
              <div class="flex flex-wrap justify-center lg:justify-start gap-2 mb-8">
                {specialist.expertise.map((item) => (
                  <span class={`text-sm md:text-base px-4 py-2 ${colorClasses.bg} ${colorClasses.text} rounded-full font-medium border ${colorClasses.border}`}>
                    {item}
                  </span>
                ))}
              </div>
              
              <!-- Quick CTA -->
              <div class="flex flex-col sm:flex-row gap-3 justify-center lg:justify-start">
                <a 
                  href={whatsappUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`inline-flex items-center justify-center gap-2 bg-gradient-to-r ${colorClasses.gradient} text-white px-6 py-3 rounded-2xl font-semibold hover:shadow-xl transition-all duration-300 transform hover:scale-105`}
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  Schedule Consultation
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bio Section -->
    <section class="py-12 md:py-20 bg-white">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class={`${colorClasses.bg} rounded-3xl p-6 md:p-10 border ${colorClasses.border} shadow-xl`}>
          <h2 class={`text-2xl md:text-3xl font-bold ${colorClasses.text} mb-6`}>About {specialist.shortName}</h2>
          <div class="space-y-4">
            {specialist.bio.map((paragraph) => (
              <p class="text-slate-700 text-base md:text-lg leading-relaxed">{paragraph}</p>
            ))}
          </div>
        </div>

        <!-- Quote -->
        <div class={`mt-8 bg-white rounded-3xl p-6 md:p-8 border-l-4 ${colorClasses.borderSolid} shadow-xl`}>
          <p class="text-slate-800 italic text-lg md:text-xl font-medium leading-relaxed mb-3">
            "{specialist.quote}"
          </p>
          <p class={`${colorClasses.text} font-bold text-base md:text-lg`}>â€” {specialist.shortName}</p>
        </div>
      </div>
    </section>

    <!-- Treatments Section -->
    {specialist.treatments.length > 0 && (
      <section class="py-12 md:py-20 bg-gradient-to-br from-sand via-cream to-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-8 md:mb-12">
            <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-slate-800 mb-4">
              Treatments & Services
            </h2>
            <p class="text-base md:text-lg text-slate-600 max-w-2xl mx-auto">
              Comprehensive dental solutions tailored to your needs
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            {specialist.treatments.map((treatment) => (
              <div class="bg-white/70 backdrop-blur-xl rounded-2xl p-6 md:p-8 border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-[1.02]">
                <h3 class={`text-xl md:text-2xl font-bold ${colorClasses.text} mb-3`}>{treatment.title}</h3>
                <p class="text-slate-700 text-sm md:text-base leading-relaxed mb-4">{treatment.description}</p>
                {treatment.price && (
                  <div class={`${colorClasses.bg} rounded-xl px-4 py-3 border ${colorClasses.border}`}>
                    <p class="text-slate-800 text-sm md:text-base font-semibold">{treatment.price}</p>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Advanced Techniques Section -->
    {specialist.advancedTechniques && (
      <section class="py-12 md:py-20 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-8 md:mb-12">
            <div class="inline-flex items-center gap-2 bg-forest-light/10 px-4 py-2 rounded-full border border-forest-light/20 shadow-lg mb-4">
              <svg class="w-6 h-6 text-forest-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
              </svg>
              <span class="text-sm font-semibold text-forest-light">Advanced Techniques</span>
            </div>
            <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-slate-800 mb-4">
              Advanced Implant Techniques
            </h2>
            <p class="text-base md:text-lg text-slate-600 max-w-2xl mx-auto">
              For patients with severe bone loss or complex cases
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            {specialist.advancedTechniques.map((technique) => (
              <div class="bg-gradient-to-br from-forest-light/10 to-sage/10 rounded-2xl p-6 md:p-8 border border-forest-light/20 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-[1.02]">
                <h3 class="text-xl md:text-2xl font-bold text-forest-light mb-3">{technique.title}</h3>
                <p class="text-slate-700 text-sm md:text-base leading-relaxed">{technique.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class={`relative py-12 md:py-20 bg-gradient-to-br ${colorClasses.gradient} overflow-hidden`}>
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-4 left-4 w-20 h-20 bg-white rounded-full blur-2xl"></div>
        <div class="absolute top-20 right-8 w-16 h-16 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-8 left-12 w-24 h-24 bg-white rounded-full blur-2xl"></div>
        <div class="absolute bottom-16 right-4 w-12 h-12 bg-white rounded-full blur-2xl"></div>
      </div>
      
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 md:mb-6 leading-tight">
          Ready to Transform Your Smile?
        </h2>
        <p class="text-base md:text-xl text-white/90 mb-6 md:mb-8 leading-relaxed">
          Schedule a consultation with {specialist.shortName} and start your journey to a perfect smile.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-md sm:max-w-none mx-auto">
          <a 
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-white text-forest px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-sand transition-all duration-300 shadow-lg hover:shadow-xl text-center transform hover:scale-105"
          >
            Contact {specialist.shortName}
          </a>
          <a 
            href="/specialists" 
            class="border-2 border-white text-white px-6 md:px-8 py-3 md:py-4 rounded-2xl text-base md:text-lg font-bold hover:bg-white hover:text-forest transition-all duration-300 text-center transform hover:scale-105"
          >
            View All Specialists
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
