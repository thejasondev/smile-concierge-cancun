---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Hero from '../components/Hero.tsx';
import Services from '../components/Services.tsx';
import WhyChoose from '../components/WhyChoose.tsx';
import NaturalResults from '../components/NaturalResults.tsx';
import HowItWorks from '../components/HowItWorks.tsx';
import CancunExperience from '../components/CancunExperience.tsx';
import Testimonials from '../components/Testimonials.tsx';
import AboutUs from '../components/AboutUs.tsx';
import CTA from '../components/CTA.tsx';
import Footer from '../components/Footer.tsx';
import {
  generateLocalBusinessSchema,
  generateOrganizationSchema,
} from '../seo/schemas';
---

<Layout
  title="Dental Tourism Cancun | Veneers, Implants & Smile Design | Smile Concierge"
  description="Transform your smile in Cancun with top dental specialists. Premium veneers, implants & smile design at 50-70% savings. Free assessment + luxury experience."
  keywords="dental tourism cancun, veneers mexico, dental implants cancun, smile design cancun, dentist cancun, dental vacation, porcelain veneers mexico, all on 4 cancun"
  ogType="website"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={generateLocalBusinessSchema()} />
  <script type="application/ld+json" set:html={generateOrganizationSchema()} />

  <Header client:load />
  <main>
    <Hero />
    <Services />
    <NaturalResults />
    <HowItWorks />
    <CancunExperience />
    <Testimonials />
    <AboutUs />
    <CTA />
  </main>
  <Footer />
</Layout>
