---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: string;
  canonicalUrl?: string;
  noindex?: boolean;
}

const {
  title,
  description = "Smile Concierge Cancun - Premium dental tourism in Mexico. Veneers, implants, and smile design with Cancun's top specialists at 50-70% savings.",
  keywords = 'dental tourism cancun, veneers mexico, dental implants cancun, smile design, dentist cancun, dental vacation mexico',
  ogImage = '/logo/logo_scc.webp',
  ogType = 'website',
  canonicalUrl,
  noindex = false,
} = Astro.props;

const siteUrl = 'https://smile-concierge-cancun.vercel.app';
const fullOgImage = ogImage.startsWith('http')
  ? ogImage
  : `${siteUrl}${ogImage}`;
const fullCanonicalUrl = canonicalUrl || Astro.url.href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Smile Concierge Cancun" />
    <meta
      name="robots"
      content={noindex ? 'noindex, nofollow' : 'index, follow'}
    />
    <link rel="canonical" href={fullCanonicalUrl} />

    <!-- Favicon - PNG-based (optimized for performance) -->
    <link rel="icon" href="/favicon/favicon.ico" sizes="48x48" />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="/favicon/favicon-96x96.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta
      name="msapplication-TileImage"
      content="/favicon/web-app-manifest-192x192.png"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Smile Concierge Cancun" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={fullCanonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#1a4d2e" />
    <meta name="msapplication-TileColor" content="#1a4d2e" />

    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="MX-ROO" />
    <meta name="geo.placename" content="Cancun" />
    <meta name="geo.position" content="21.1619;-86.8515" />
    <meta name="ICBM" content="21.1619, -86.8515" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="min-h-screen bg-slate-50 font-sans antialiased">
    <slot />
  </body>
</html>
